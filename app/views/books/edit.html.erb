<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_area :body %><br>
<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id), style: "color:black;" %> | <%= link_to "Back", books_path, style: "color:black;" %>
